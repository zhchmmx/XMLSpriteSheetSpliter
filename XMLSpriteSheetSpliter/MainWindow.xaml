<Window x:Class="XMLSpriteSheetSpliter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLSpriteSheetSpliter"
        mc:Ignorable="d"
        Title="SpriteSpliter" Height="120" Width="350" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" Margin="5 5 5 5" Orientation="Horizontal">
            <TextBlock Text="Path:"/>
            <TextBlock x:Name="path"/>
        </StackPanel>
        
        <Button x:Name="BrowseButton" Content="Browse..." Grid.Row="1" Margin="5 10 5 10" Click="BrowseButton_Click"/>
        <Button x:Name="SaveButton" Content="Save..." Grid.Row="1" Grid.Column="1" Margin="5 10 5 10" Click="SaveButton_Click"/>
    </Grid>
</Window>
